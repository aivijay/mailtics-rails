<%= div_for subscriber do %>

  <% @status = {'0' => 'Inactive', '1' => 'Active', '-1' => 'Deleted'} %>
  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
    <td width="330" valign="top">
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td width="20">
      <%= image_tag "s1.png", :style => "height: 20px;" %>
          </td>
          <td>
      <h3>
        <%= link_to subscriber.email, subscriber %>
        <% if subscriber.owned_by? current_user %>
  
          <span class='actions'>
            <%= link_to "Edit", edit_subscriber_path(subscriber) %>
            <%= link_to "Delete", subscriber, :confirm => "Are you sure?", :method => :delete %>
          </span>
        <% end %>
      </h3>
          </td>
        </tr>
      </table>
    </td>
    <td width="250">
      <%= subscriber.last_name %>
    </td>
    <td width="250">
      <%= subscriber.first_name %>
    </td>
    <td>
      <%= subscriber.id %>
    </td>
    <!--
    <td>
      <b><%= @status[subscriber.status.to_s] %></b>
    </td>
    -->
    <td>
      <%= subscriber.updated_at %>
    </td>

  </tr>

<% end %>

