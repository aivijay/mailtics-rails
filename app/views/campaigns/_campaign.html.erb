<%= div_for campaign do %>
  <table border="0" cellpadding="0" cellspacing="0">
    <tr>
      <td width="130">
        <span style="font-size: 12px; font-weight: bold;">Campaign Name:</span>
      </td>
      <td>
        <h3>
          <%= link_to campaign.name, campaign %>
          <% if campaign.owned_by? current_user %>
            <span class='actions'>
              <%= link_to "Edit", edit_campaign_path(campaign) %>
              <%= link_to "Delete", campaign, :confirm => "Are you sure?", :method => :delete %>
            </span>
          <% end %>
        </h3>
      </td>
    </tr>
    <tr>
      <td>
        <b>Description: </b>
      </td>
      <td>
        <%= campaign.description %>
      </td>
    </tr>
    <tr>
      <td>
        <b>Last updated date:  </b>
      </td>
      <td>
        <%= campaign.updated_at %>
      </td>
    </tr>
  </table>

    <hr />
<% end %>
