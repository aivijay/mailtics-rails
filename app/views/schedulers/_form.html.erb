<span class="tip"><b>Tip:</b> Schedule your campaign to be triggered immediately at a later time </span>
<%= form_for(@scheduler) do |f| %>
  <% if @scheduler.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@scheduler.errors.count, "error") %> prohibited this scheduler from being saved:</h2>

      <ul>
      <% @scheduler.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :campaign_name %><br />
    <%= f.select("campaign_id", @campaigns.collect {|c| [ c.name, c.id ] }, {:prompt => 'Select Campaign'}, :style => "width: 350px; height: 24px;") %>
  </div>

