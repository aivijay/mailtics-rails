<%= div_for comment do %>
  <h3>
    <%= comment.name %> said:
    <% if @campaign.owned_by? current_user %>
      <span class='actions'>
        <%= link_to 'Delete', [@campaign, comment], :confirm => 'Are you sure?', :method => :delete %>
      </span>
    <% end %>
  </h3>
  <%= comment.body %>
<% end %>
